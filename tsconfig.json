{
    "compilerOptions": {
        "target": "es2016",
        "module": "commonjs",
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "noImplicitAny": true,
        "esModuleInterop": true,
        "strict": true,
        "sourceMap": true,
        "types": ["node", "jest"],
        "forceConsistentCasingInFileNames": true,
        "outDir": "./dist",
        "skipLibCheck": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
}